{% extends 'base.html.twig' %}

{% block title %}Nouveau client{% endblock %}

{% block body %}
<div class="container">
    <div class="jumbotron">
        {% for message in app.flashes('erreur') %}
        <div class="flash-erreur text-center">
            <h2 class="text-danger">{{ message }}</h2>
        </div>
        {% endfor %}
        {{ form_start(form, {'attr': {'class': 'row'}}) }}
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.societe, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.siret, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.mail, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.codePostal, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.ville, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.note, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="mx-auto">
            {{ form_row(form.submit,{'attr': {'class': 'btn btn-primary '}, 'label' : 'Ajouter'}) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}