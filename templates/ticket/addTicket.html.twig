{% extends 'base.html.twig' %}

{% block title %}Nouveau ticket{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            {% if client is defined %}
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <p><b>Nom : </b>{{client.nom}} <b>Prénom : </b>{{client.prenom}}</p>
                        {% if client.societe is not null %}
                        <p><b>Société : </b>{{client.societe}}</p>
                        {% endif %}
                        <p><b>Email : </b>{{client.mail}}</p>
                        <p><b>Téléphone : </b>{{client.telephone}}</p>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'row'}}) }}
                        <div class="form-group">
                            {{ form_row(form.intitule, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group ml-4">
                            {{ form_row(form.niveau, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="mx-auto mb-2">
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}