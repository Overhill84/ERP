{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="container">
    <div class="jumbotron">
        {{ form_start(form, {'attr': {'class': 'row'}}) }}
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="mx-auto">
            {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary '}}) }}
        </div>
        {{ form_end(form) }}
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Type</th>
                        <th scope="col">Intitulé</th>
                        <th scope="col">Prix HT</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                    <tr>
                        <th>{{ article.type }}</th>
                        <td>{{ article.nom }}</td>
                        <td>{{ article.prix }} €</td>
                        <td><a href="{{path('show_article', {'id':article.id})}}" class="btn btn-primary">Détails</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}